	elif (( `echo "$MAG >= 4.50" | bc -l` )) && (( `echo "$MAG < 5.00" | bc -l` )) ; then		
			F1=(0.04 0.04 0.07 0.07)
			F2=(0.05 0.05 0.08 0.08)	
