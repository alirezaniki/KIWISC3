			SCA_MOM2="3.5e17"	
			SCA_STEP="1.0e16"						
			MAX_DIS=550
			MAXLOC=350
			MIN_DIS=30
			MAX_DEP=`echo "$DEP + 25" | bc -l`			
			T1=-1; T2=4.0; TS=0.2; CC=10
			
	elif (( `echo "$MAG >= 5.00" | bc -l` )) && (( `echo "$MAG < 5.50" | bc -l` )) ; then		
			F1=(0.02 0.02 0.05 0.05)
			F2=(0.025 0.025 0.055 0.055)
