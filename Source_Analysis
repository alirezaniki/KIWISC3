	elif (( `echo "$MAG >= 5.50" | bc -l` )) && (( `echo "$MAG < 6.00" | bc -l` )) ; then		
			F1=(0.015 0.015 0.045 0.045)
			F2=(0.02 0.02 0.045 0.045)
			F3=(0.02 0.02 0.05 0.05)
			FM=(0.020 0.020 0.060 0.060)
			n=3
